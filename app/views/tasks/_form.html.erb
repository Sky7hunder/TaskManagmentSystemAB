<%= form_for @task, html: {class: 'form-horizontal', id: 'form1'} do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'col-sm-offset-2 col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, class: 'col-sm-offset-2 col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_field :priority, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Due date', class: 'col-sm-offset-2 col-sm-2 control-label' %>
    <div class="col-xs-5 date dateContainer">
      <div class="input-group input-append date" id="startdate">
        <span class="input-group-addon add-on"><span class="glyphicon glyphicon-calendar"></span></span>
        <%= f.text_field :due_date, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Task description', class: 'col-sm-offset-2 col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= f.text_area :description, rows: '10', cols: '45', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-5">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>