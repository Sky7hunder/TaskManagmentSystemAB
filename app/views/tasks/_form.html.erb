<%= form_for @task, validate: true, html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :title, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :priority, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :priority, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Due date', class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <div class='input-group date' id='datetimepicker1'>
        <%= f.text_field :due_date, class: 'form-control' %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Task description', class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, rows: '10', cols: '45', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-default' %>
    </div>
  </div>
<% end %>