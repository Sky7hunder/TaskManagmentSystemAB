<div class="index">
  <h1>My tasks</h1>
  <%= link_to 'New tast', new_task_path, class: 'btn btn-default new-task-btn' %>
  <%= form_tag destroy_multiple_tasks_path, method: :delete, remote: true, id: 'actions-form' do %>
    <div class="col-xs-12 actions-row">
      <ul>
        <li>
          <%= submit_tag "Delete selected", class: 'btn btn-default delete-multiple', data: {confirm: 'Are you sure?'} %>
        </li>
        <li>
          <a role="button" id="check-all" class='btn btn-default'>Check all</a>
        </li>
        <li>
          <a role="button" id="uncheck-all" class='btn btn-default'>Uncheck all</a>
        </li>
      </ul>
    </div>
    <div class="col-xs-12 col-sm-6 table-wrap">
      <h3>Uncompleted tasks</h3>
      <table class="table table-responsive tasks-table" id="uncompleted_tasks">
        <thead>
          <tr>
            <th></th>
            <th><span><%= sort_link 'title' %></span></th>
            <th></th>
            <th></th>
            <th>Complete</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'task', collection: @uncompleted_tasks %>
        </tbody>
      </table>
      <div class="col-xs-12 table-bottom-block"></div>
    </div>
    <div class="col-xs-12 col-sm-6 table-wrap completed-tasks-wrap">
      <h3>Completed tasks</h3>
      <table class="table table-responsive tasks-table" id="completed_tasks">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th></th>
            <th></th>
            <th>Complete</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: 'task', collection: @completed_tasks %>
        </tbody>
      </table>
      <div class="col-xs-12 table-bottom-block"></div>
    </div>
  <% end %>
</div>

