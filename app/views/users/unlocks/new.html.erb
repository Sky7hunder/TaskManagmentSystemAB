<div class="center col-md-4 col-sm-5 col-xs-8 devise-form">
  <h2 class="text-center">Resend unlock instructions</h2>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-horizontal'}) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.submit "Resend unlock instructions", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
